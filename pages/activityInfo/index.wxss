.progress-box .progress .cell .active-item {
  width: 18rpx;
  height: 18rpx;
  border-radius: 9rpx;
  position: absolute;
  display: inline-block;
  background-color: #fff;
  top: 1rpx;
  transform: translate(-8rpx);
}
.progress-box .progress .cell:last-child .active-item {
  transform: translate(-20rpx);
}
.progress-box .progress .cell .reward {
  font-size: 20rpx;
  background-color: #9B7C56;
  position: absolute;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 14rpx;
  padding: 0 8rpx;
  bottom: 46rpx;
  transform: translate(-50%);
  color: #fff;
}

.progress-box .progress .cell:first-child .reward {
  transform: translate(4rpx);
}

.progress-box .progress .cell:last-child .reward {
  transform: translate(-90%);
  min-width: 76rpx;
  text-align: center;
}

.progress-box .progress .cell .reward .arrow {
  width: 0;
  height: 0;
  border: 6rpx solid transparent;
  border-top-color: #9B7C56;
  position: absolute;
  left: 45%;
}

.progress-box .progress .cell:first-child .reward .arrow {
  transform: rotate(135deg);
  left: 10%;
  top: 21rpx;
}

.progress-box .progress .cell:last-child .reward .arrow {
  transform: rotate(-135deg);
  left: 78%;
  top: 21rpx;
}

.num {
  position: absolute;
  width: auto;
  transform: translate(-60%);
  top: 30rpx;
  font-size: 24rpx;
  height: 34rpx;
  line-height: 34rpx;
  color: #333333;
}

.progress-box .progress .cell:first-child .num {
  transform: translate(0);
}

.progress-box .progress .cell:last-child .num {
  transform: translate(-100%);
}

.unit {
  position: absolute;
  width: 91%;
  bottom: 0rpx;
  color: #929292;
  font-size: 24rpx;
}

.unit .unit-box {
  display: flex;
  justify-content: space-between;
}

.activity-info {
  margin: 0 30rpx 30rpx 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.activity-info .info-title {
  color: #333333;

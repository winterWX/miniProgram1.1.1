page {
  background-color: #ededed;
  height: 100%;
}

.container {
  background-color: #ededed;
  display: flex;
  flex-direction: column;
  height: 100%;

}

.container .disable-tip {
  background-color: #F2F2F2;
  color: #333;
  padding: 30rpx 60rpx;
  display: flex;
  align-items: center;
}

.container .disable-tip .disable-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 4rpx 14rpx 0 0;
}

.container .main {
  flex: 1;
  overflow-y: auto;
}

.activity-desc {
  background-color: #fff;
  font-size: 0;
}

.activity-desc .poster {
  width: 100%;
  height: 290rpx;
}

.activity-desc .content {
  padding: 20rpx 30rpx 30rpx 30rpx;
}

.activity-desc .content .activity-content {
  display: flex;
}

.activity-desc .activity-content .title {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.activity-desc .remain-days {
  font-size: 24rpx;
  background-color: #ededed;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 10rpx;
  display: table-cell;
  padding: 4rpx 16rpx 4rpx 12rpx;
  color: #00A865;
  border: 2rpx solid #00A865;
}

.over {
  font-size: 24rpx;
  background-color: #ededed;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 10rpx;
  padding: 10rpx 30rpx;
  color: #666666;
  display: table-cell;
}

.activity-desc .remain-days .time-icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.activity-desc .remain-days text {
  vertical-align: middle;
}

.activity-desc .activity-desc {
  color: #666666;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.milepost-box {
  background-color: white;
  margin: 30rpx;
  padding-bottom: 30rpx;
}

.milepost-box .milepost {
  padding: 30rpx 30rpx 0 30rpx;
  background-color: white;
  height: 300rpx;
  position: relative;
}
.milepost .header {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.milepost .header .activity-detail {
  border-bottom: 2rpx solid #333;
}
.milepost .header .title {
  font-size: 32rpx;
}

.progress-box {
  padding-top: 20rpx;
  position: relative;
  top: 50rpx;
}

.progress-box .progress {
  width: 100%;
  height: 20rpx;
  background-color: #F7F7F7;
  border-radius: 10rpx;
  position: relative;
  display: table;
}

.progress-box .progress .cell {
  display: table-cell;
}

.progress-box .percent {
  height: 20rpx;
  background-color: #00A865;
  border-radius: 10rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
  z-index: 3;
}


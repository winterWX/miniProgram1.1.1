<view class="container">
    <view class="main">
        <view class="header">
        <view class="bgimg-box">
            <image class="bg-img" src="{{baseUrl + '/images/preferential/group-9@2x.png'}}"></image>
        </view>
        <view class="tit-box">
            <view class="title">{{firstTitleCn}}</view>
            <view class="sub-title">{{secondTitleCn}}</view>
        </view>
    </view>
    <view class="content">
        {{descriptionCn}}
    </view>
    </view>
    <view class="footer">
        <button class="btn-primary btn" wx:if="{{level == 1 && (type == 3 || type == 4) }}" catchtap="goStrategy">立即升级获取权益</button>
        <button class="btn-primary btn" wx:if="{{(level == 2 || level == 4) && type == 3 }}" catchtap="goDetail" data-id="{{id}}">立即查看我的优惠券</button>
        <button class="btn-primary btn" wx:if="{{(level == 3 || level == 5) && (type == 3 || type == 4)}}" data-id="{{id}}" catchtap="goDetail">立即查看我的优惠券</button>
    </view>
</view>
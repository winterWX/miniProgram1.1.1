page {
  height: 100%;
}
page .container {
  height: 100%;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
}
.container .main {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.container .header {
  margin-bottom: 20rpx;
  background-color: #fff;
}
.container .header .bgimg-box {
  height: 288rpx;
}
.container .header .bgimg-box .bg-img {
  width: 750rpx;
  height: 288rpx;
}
.container .header .tit-box {
  padding: 28rpx;
}
.container .header .title {
  color: #333;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.container .header .sub-title {
  color: #666;
  font-size: 28rpx;
}
.container .content {
  flex: 1;
  padding: 40rpx 30rpx;
  background-color: #fff;
  color: #666;
  font-size: 28rpx;
  overflow-y: auto;
}
.container .footer {
  padding: 40rpx 30rpx 50rpx 30rpx;
  left: 0;
  bottom: 0;
  width: 690rpx;
}
.container .footer .btn {
  color: #fff;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
   border-radius: 4rpx !important;
}
.footer .btn::after{
  border: none !important;
}
page {
  background-color: rgb(237, 237, 237);
}

.time-dimension {
  display: flex;
  background-color: white;
}

.time-dimension .time-item {
  flex: 1;
  text-align: center;
  color: rgb(37, 37, 37);
  cursor: pointer;
}

.time-dimension .time-item {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.time-dimension .time-item text.active {
  border-bottom: 4rpx solid rgb(0, 168, 101);
  color: rgb(0, 168, 101);
  display: inline-block;
  height: 76rpx;
  line-height: 76rpx;
}

.step-echart-box {
  padding: 0 30rpx;
  border: 2rpx solid rgb(237, 237, 237);
  background-color: white;
}

.step-echart-box .time-slot {
  display: flex;
  padding: 30rpx 0;
}

.step-echart-box .time-slot .time-display {
  flex: 1;
}

.step-echart-box .time-slot image {
  width: 36rpx;
  height: 36rpx;
}

.time-display {
  text-align: center;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
}

.step-num-box view {
  height: 96rpx;
  line-height: 96rpx;
  margin-right: 10rpx;
}

.step-num-box {
  padding: 0 0 10rpx 0;
}

.step-num-box .step {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: rgb(146, 146, 146);
}

.step-num-box .step-num {
  font-size: 80rpx;
  color: rgb(51, 51, 51);
}

.step-num-box .step-tip {
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin: 10rpx 0 0 0;
  color: rgb(102, 102, 102);
}

.echart-box {
  height: 450rpx;
  line-height: 450rpx;
  text-align: center;
}

.history-step {
  height: 50rpx;
  line-height: 50rpx;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  color: rgb(51, 51, 51);
  background-color: white;
}

.history-step .icon {
  width: 36rpx;
  height: 36rpx;
}

.step-description {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: white;
}

.desc-title {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: rgb(51, 51, 51);
}

.desc-content {
  margin-top: 10rpx;
  color: rgb(102, 102, 102);
  font-size: 28rpx;
}


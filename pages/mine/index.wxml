
<view>
 <view class="healthBack-main">
		<view class="healthBack" bindtap="healthPage" >乐健康</view>
		<view class="healthBack" bindtap="sendFriend" >推荐好友</view>
	</view>
	<view class="title">
		<text>基本信息</text>
		<text class="title-tip">(完善既得100积分)</text>
	</view>
	<view class="content-box">
		<view class="progress-box">
			<view class="press-number-box">
				<text class="press-number">{{ userInfo.percentage }}%</text>
			</view>
			<view class="progress-bar">
				<progress percent="{{ userInfo.percentage }}" active-color="#09BB07" active stroke-width="10" />
			</view>
			<image wx:if="{{ userInfo.percentage !== 100 }}" class="gift" src="../../images/gift_d.png"></image>
			<image wx:if="{{ userInfo.percentage === 100}}" class="gift" src="../../images/gift.png"></image>
		</view>
		<view class="userinfo-item-container">
			<text class="userinfo-item-label">头像</text>
			<view class="userinfo-item-value">
				<image style="vertical-align: middle;" class="avatar" src="{{userInfo.avatarUrl}}"></image>
				<image class="userinfo-item-value__icon" src="../../images/back.png"></image>
			</view>
		</view>
		<view class="userinfo-item-container">
			<text class="userinfo-item-label">昵称</text>
			<view>
				<text class="userinfo-item-value__label">{{ userInfo.nickName }}</text>
				<image class="userinfo-item-value__icon" src="../../images/back.png"></image>
			</view>
		</view>
		<view class="userinfo-item-container">
			<text class="userinfo-item-label">性别</text>
			<view class="">
				<text class="userinfo-item-value__label">{{ userInfo.gender }}</text>
				<image class="userinfo-item-value__icon" src="../../images/back.png"></image>
			</view>
		</view>
		<view class="userinfo-item-container">
			<text class="userinfo-item-label">生日</text>
			<view class="userinfo-item-value__label">
				<text>{{ userInfo.birthday }}</text>
				<image class="userinfo-item-value__icon" src="../../images/back.png"></image>
			</view>
		</view>
		<view class="userinfo-item-container">
			<text class="userinfo-item-label">手机号码</text>
			<view>
				<text class="userinfo-item-value__label">{{ userInfo.phone }}</text>
				<image class="userinfo-item-value__icon" src="../../images/back.png"></image>
			</view>
		</view>
		<view class="userinfo-item-container" style="border-bottom: none;">
			<text class="userinfo-item-label">邮箱地址</text>
			<view>
				<text class="userinfo-item-value__label">{{ userInfo.email }}</text>
				<image class="userinfo-item-value__icon" src="../../images/back.png"></image>
			</view>
		</view>
		<view class="title">
			<text>会员信息</text>
		</view>

		<view class="userinfo-item-container pr10">
			<text class="userinfo-item-label">会员级别</text>
			<view>
				<text class="userinfo-item-value__label">青铜会员</text>
			</view>
		</view>

		<view class="userinfo-item-container pr10">
			<text class="userinfo-item-label">会员积分</text>
			<view>
				<text class="userinfo-item-value__label">200</text>
			</view>
		</view>
		<view class="userinfo-item-container pr10" style="border-bottom: none;">
			<text class="userinfo-item-label">恒生会员码</text>
			<view>
				<text class="userinfo-item-value__label">未绑定</text>
			</view>
		</view>
		
	</view>
	<footer active="{{active}}"></footer>
</view>

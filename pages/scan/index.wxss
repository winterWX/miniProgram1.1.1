/**scan.wxss**/
.scan-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #B9BEC4;
  position: fixed;
  align-items: center;
}
.scan-view .title {
  color: #fff;
  font-size: 32rpx;
  margin: 60rpx 0 130rpx 0;
  text-align: center;
} 

.scan-camera {
  width: 500rpx;
  height: 500rpx;
  border-radius: 6rpx;
}

.cover-corner {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
}

.cover-left-top {
  left: 0;
  top: 0;
}

.cover-right-top {
  right: 0;
  top: 0;
}

.cover-left-bottom {
  left: 0;
  bottom: 0;
}

.cover-right-bottom {
  right: 0;
  bottom: 0;
}

.scan-animation {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 500rpx;
  height: 100rpx;
  /* background-color: #08FDFE; */
  /* border-radius: 50%; */
}
.scan-view .tip {
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  margin-top: 30rpx;
}
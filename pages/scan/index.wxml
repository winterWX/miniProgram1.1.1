<!--pages/scan/index.wxml-->
<view class="scan-view">
  <view class="title">
    请职员为你出示签到二维码
  </view>
  <view class='scan-border' wx:if="{{show}}">
    <camera class='scan-camera' mode="scanCode" binderror="cameraError" bindscancode='scancode' frame-size='large'>
      <cover-image class='cover-corner cover-left-top' src='../../image/medical/lt.png'></cover-image>
      <cover-image class='cover-corner cover-right-top' src='../../image/medical/rt.png'></cover-image>
      <cover-image class='cover-corner cover-left-bottom' src='../../image/medical/lb.png'></cover-image>
      <cover-image class='cover-corner cover-right-bottom' src='../../image/medical/rb.png'></cover-image>
      <cover-image class='scan-animation' animation="{{animation}}" src="../../image/medical/rectangle-4.png"></cover-image>
    </camera>
    <!-- 这里可以处理其他内容 -->
  </view>
  <view class="tip">
    放入框内，自动扫描。
  </view>
</view>

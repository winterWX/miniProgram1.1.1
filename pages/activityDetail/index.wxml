<view class="container">
	<view class="main">
		<view class="activity-desc">
			<image class="poster" src="{{detail.thumb}}"></image>
			<view class="content">
				<view class="activity-content">
					<text class="title">{{detail.title}}</text>
					<view class="remain-days" wx:if="{{detail.status === 2}}">
						<image class="time-icon" src="../../image/icon-left-time.png"></image>
						<text>剩余{{detail.days}}天</text>
					</view>
				</view>
				<view class="activity-desc">
					<text>{{detail.description}}</text>
				</view>
			</view>
		</view>
		<!-- 里程碑 -->
		<view class="milepost">
			<view class="title">里程碑</view>
			<view class="progress-box">
				<view class="percent"></view>
				<view class="progress">
					<view class="cell" wx:for="{{detail.mileStoneVo}}" wx:key="id" wx:for-item="step">
						<view class="item" style="left: {{ (100 / (detail.mileStoneVo.length-1)) * index + '%'}}"></view>
						<view class="reward" style="left: {{ (100 / (detail.mileStoneVo.length-1)) * index + '%'}}">
							{{step.reward}}积分
							<view class="arrow"></view>
						</view>
						<view class="num" style="left: {{ (100 / (detail.mileStoneVo.length-1)) * index + '%'}}">{{step.mileStoneTarget}}</view>
					</view>
				</view>
			</view>
			<view class="unit">单位： 步</view>
		</view>
		<view class="activity-info">
			<view class="info-title">活动详情</view>
			<view class="content">{{ detail.content }}</view>
		</view>
		<view class="activity-info">
			<view class="info-title">活动规则及声明</view>
			<view class="content">{{ detail.ruledescription }}</view>
		</view>
	</view>
	<view class="btn-box">
		<!-- <button class="btn" catchtap="joinActivity">一键参与</button> -->
		<button wx:if="{{!isJoin}}" class="btn"  type="primary" size="large"  open-type="getUserInfo" bindgetuserinfo="getUserInfo">一键参与</button>
		<button wx:if="{{isJoin}}" class="dis-btn">已报名</button>
	</view>
</view>
.activity {
  position: absolute;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  border-radius: 25rpx;
  top: 30rpx;
  right: 30rpx;
  background-color: #1d7351;
  color: #fff;
} 
.header {
  position: absolute;
  width: 134rpx;
  height: 134rpx;
  left: 50%;
  top: 162rpx;
  border-radius: 50%;
  transform: translate(-50%);
}
.success-icon {
  width: 100%;
  height: 420rpx;
}
.text-middle {
  text-align: center;
}
.rank-info .tip {
  margin: 30rpx auto;
  font-size: 38rpx;
  color: #333333;
}
.rank-info .reward-tip {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333333;
}
.rank-info .reward {
  margin-bottom: 60rpx;
  height: 82rpx;
  font-size: 64rpx;
  padding-top: 10rpx;
  color: #9B7C56;
  font-weight: 500;
}
.rank-info .rank {
  color: #333333;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin: 30rpx 0;
}
.rank-info .rank-num {
  color: #9B7C56;
  font-weight: 400;
  font-size: 48rpx;
}
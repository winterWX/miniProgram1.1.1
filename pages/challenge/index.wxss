page {
  color: #ededed;
  height: 100%;
}

.container {
  background-color: #ededed;
  overflow-y: auto;
}

.activity-box {
  padding: 36rpx 30rpx;
  margin-bottom: 30rpx;
  background-color: white;
}

.img {
  display: block;
  height: 200rpx;
  width: 100%;
}

.activity-box .activity-content {
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  line-height: 50rpx;
  margin: 20rpx 0 10rpx 0;
}

.activity-box .activity-content .title {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.activity-box .activity-content .remain-days {
  font-size: 24rpx;
  background-color: #ededed;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  color: #666666;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-box .activity-content .remain-days .time-icon {
  width: 40rpx;
  height: 40rpx;
}

.activity-box .activity-desc {
  color: #666666;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.past-activity {
  z-index: 3;
  text-align: center;
  color: #333333;
  font-size: 24rpx;
  text-decoration: blink;
  background-color: #ededed;
  margin-bottom: 30rpx;
}
.past-activity text {
  border-bottom: 2rpx solid #333333;
}
.empty-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  text-align: center;
}
.icon {
  width: 210rpx;
  height: 210rpx;
  display: block;
}
.no-data {
  font-size: 28rpx;
  color: #333333;
  margin-top: 50rpx;
}
.browse {
  width: 144rpx;
  height: 46rpx;
  text-align: center;
  line-height: 46rpx;
  border: 2rpx solid #333333;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: rgb(51, 51, 51);
  margin: 20rpx auto 0 auto;
}
page {
    height: 100%;
}
.container {
    min-height: 100%;
    background-color: #ededed;
}
.container .heade {
    position: relative;
}
.container .header .bg-img {
    width: 100%;
    height: 290rpx;
}
.container .header .label {
    background-color: #7f7f7f;
    color: #fff;
    font-size: 28rpx;
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 25rpx;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}
.container .main {
    padding: 50rpx 30rpx;
    position: relative;
}
.container .main .answer-box {
    background-color: #fff;
    padding: 30rpx;
    width: 630rpx;
    min-height: 610rpx;
    border-radius: 10rpx;
}
.container .main  .circle-out {
    width: 130rpx;
    height: 130rpx;
    position: absolute;
    left: 50%;
    top: 0rpx;
    transform: translate(-65rpx);
    border-radius: 50%;
    background-color: #fff;
}
.container .main .circle-in {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    position: absolute;
    left: 50%;
    top: 15rpx;
    transform: translate(-50rpx);
    background-color: #00a865;
    border-radius: 50%;
    text-align: center;
}
.container .main .circle-in .show-result .pass {
    color: #fff;
    font-size: 40rpx;
}
.container .main .circle-in .show-result .all {
    font-size: 28rpx;
    color: #fff;
}
.container .main .answer-box .qa {
    margin-top: 75rpx;
}
.container .main .answer-box .qa .quesition {
    font-size: 32rpx;
    color: #333;
}
.container .main .answer-box .qa .options {
    padding: 30rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.container .main .answer-box .qa .options .option {
    color: #333;
    font-size: 32rpx;
    padding: 25rpx 72rpx 25rpx 30rpx;
    background-color: #f7f7f7;
    margin-bottom: 30rpx;
    position: relative;
}
.itemText{
  width: 100%;
  height: 100%;
  text-align: center;
}
.container .main .answer-box .qa .options .option .icon {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-18rpx);
    right: 30rpx;

}
.container .main .answer-box .qa .options .cross {
    border: 2rpx solid #e02020;
    color: #e02020;
    background-color: #fff;
}
.container .main .answer-box .qa .options .success {
    border: 2rpx solid #00a865;
    color: #00a865;
    background-color: #fff;
}
.container .btn {
    margin: 0 30rpx 30rpx 30rpx;
}
.container .main .answer-box .qa .options .active {
    border: 2rpx solid #00a865;
}
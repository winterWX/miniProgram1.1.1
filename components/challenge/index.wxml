<!--components/challenge/index.wxml-->
<view class="challenge">
  <view class="title">
    <view class="title_dt">连续挑战</view>
    <view class="title_dd title_ft">历史记录</view>    
  </view>
  <view class="steps_tips">已经连续4天</view>
  <view class="steps">
    <view class="steps_reward">
      <view class="reward_tips">
        坚持3天领50积分
        <view class="popper_arrow">
        <image src="../../images/iconArrow5X5@2x.png" mode="aspectFit" />
        </view>
      </view>
    </view>
    <view class="steps_list">
      <view class="step_item"  class="{{item.receiveStatus == 1 ? 'disable step_item' : (item.receiveStatus == 4 ? 'disable step_item' : (item.receiveStatus == 3 ? 'active step_item' : 'step_item'))}}" wx:for="{{ list }}" wx:key="index">
        <view class="step_item_top">
          <view class="item_info">{{item.receiveStatus == 1 ? '已领' : (item.receiveStatus == 4 ? '过期' : (item.receiveStatus == 3 ? '补领' : item.reward))}}</view>
          <view class="item_image">
            <image src="{{item.iconPath}}" mode="widthFix"/>
            
          </view>
        </view>
        <view class="step_item_bottom">
          第{{item.day}}天
        </view>
      </view>

    </view>

  </view>
  <view class="tips">
    连续7天可以领取50积分，连续28天可以领取100积分
    
  </view>
</view>
.challenge{
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 2px;
  background-color: #ffffff;
  height: 396rpx;
  margin: 30rpx;
}
.title{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  align-content:center;
  position: relative;
  height: 90rpx;
  line-height: 90rpx;  
}
.title_dt{ 
  font-size: 32rpx; 
  color: #333333;
}
.title_dd{
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #333333;
  padding-right: 38rpx;
}
.title_ft::after{
  content: " ";
    display: inline-block;
    height: 20rpx;
    width: 20rpx;
    border-width: 2rpx 2rpx 0 0;
    border-color: #333;
    border-style: solid;
    -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: absolute;
    top: 50%;
    margin-top: -10rpx;
    right: 10rpx;
}
.steps_tips{
  font-size: 24rpx;
  color: #666666; 
}
.steps{
  position: relative; 
}
.steps_reward{
  height: 48rpx;
  width: 100%;
}
.steps_list{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-flow:row nowrap;
  font-size: 24rpx;
  width: 100%; 
}
.step_item{
  flex:1;
  margin: 10rpx;
  box-sizing: border-box;  
  font-size: 20rpx;
  font-weight: 500;
  text-align: center; 

}
.step_item_top{
   width: 100%;
  height: 98rpx; 
  background-color: #ededed;
  text-align: center;
  color: #9b7c56;
  border-radius: 3px; 
  box-sizing: border-box;
}
.step_item_bottom{
  text-align: center;
  color: #929292;
  margin-top: 10rpx;
  
}
.disable .step_item_top{
  opacity: 0.7; 
  color: #929292;
   background-color: #ededed;
}
.active .step_item_top{
  background-color: #00a865;
  color: #ffffff;
}
.active .step_item_bottom{
  color: #333333;
}
.item_info{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.item_image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
}
.item_image image{
  width: 100%;
  height: 100%;
}
.tips{
  margin-top: 25rpx;
  font-size: 24rpx; 
  color: #929292;
  text-align: center;
}
.reward_tips{
 float: right;
 font-size: 24rpx;  
 position: relative;
 height: 36rpx;
  border-radius: 20rpx;
  box-shadow: 0 1px 5px 0 rgba(0, 0, 0, 0.05);
  background-color: #9b7c56;
  line-height: 1.5;
  color: #ffffff;
  padding: 0 10rpx;
  
}
